{
  "manifest_version": 2,
  "name": "Pivotal Fixes",
  "author": "Chris Zetter",
  "description": "This tweaks the look and behaviour of Pivotal Tracker",
  "version": "1.0",
  "permissions": [
    "tabs", "https://www.pivotaltracker.com/"
  ],
  "browser_action": {
  },
  "content_scripts": [
    { "matches": ["https://www.pivotaltracker.com/*"],
      "css": ["fixes.css"]
    },
    { "matches": ["https://www.pivotaltracker.com/*"],
      "js": ["jquery.min.js", "fixes.js"],
      "run_at": "document_end"
    }
  ]
}
